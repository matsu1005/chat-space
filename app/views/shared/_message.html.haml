.message{"data-id": "#{message.id}"}
  .message__upper-info   
    %p.message__upper-info__talker#message-user_name
      = message.user.name
    %p.message__upper-info__date#message-date
      = message.created_at .strftime("%Y/%m/%d %H:%M")
  - if message.text.present?
    %p.message__text#message-text
      = message.text
  =image_tag message.image if message.image.present?



  