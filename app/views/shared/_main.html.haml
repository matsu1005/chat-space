.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group{"data-group_id": "1359"} サッカー
      %ul.main-header__left-box__member-list
        Member：
        = render partial: 'shared/member', locals: {group: @group}
      = link_to '/groups/1/edit' do
        .main-header__edit-btn Edit
  .messages
    = render partial: 'shared/message', collection: @messages
  .form
    #new_message.new_message
    = form_for [@group,@message] do |f|
      .form-box
        = f.text_field :text, class: 'form-box__text', placeholder: "type a message"
        = f.label :image, class: 'form-box__image', for: "message_image" do
          = fa_icon 'picture-o', class: 'fa'
          = f.file_field :image, id: 'message_image', class: 'form-box__image__file'
      = f.submit "Send", class: 'submit-btn' 

